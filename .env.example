# Marketing Audit System Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# ANTHROPIC API CONFIGURATION
# =============================================================================

# Your Anthropic API key (required)
# Get it from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Claude model to use (optional, defaults to claude-sonnet-4-5-20250929)
# Options: claude-sonnet-4-5-20250929, claude-opus-4-20250514, claude-3-5-sonnet-20241022
MODEL_NAME=claude-sonnet-4-5-20250929

# Maximum tokens for Claude response (optional, defaults to 4096)
# Increase if you need longer, more detailed audits
MAX_TOKENS=4096

# =============================================================================
# REQUEST CONFIGURATION
# =============================================================================

# Timeout for website requests in seconds (optional, defaults to 30)
REQUEST_TIMEOUT=30

# =============================================================================
# AD SPEND MONITORING CONFIGURATION
# =============================================================================

# Notion API Configuration (for CPA alerts)
# Get your integration token from: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google Ads API Configuration
GOOGLE_ADS_API_KEY=your_google_ads_api_key
GOOGLE_ADS_CLIENT_ID=your_client_id
GOOGLE_ADS_CUSTOMER_ID=your_customer_id

# Reddit Ads API Configuration
REDDIT_ADS_ACCESS_TOKEN=your_reddit_ads_access_token
REDDIT_ADS_ACCOUNT_ID=your_reddit_account_id

# Upwork API Configuration
UPWORK_API_KEY=your_upwork_api_key
UPWORK_API_SECRET=your_upwork_api_secret

# Number of days to fetch spend data (optional, defaults to 7)
FETCH_DAYS_BACK=7
